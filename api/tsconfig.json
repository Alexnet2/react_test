{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "./src/types"
    ],
    "paths": {
      "@components": [
        "components/"
      ],
      "@routes": [
        "routes/"
      ],
      "@config": [
        "config/"
      ],
      "@database": [
        "database/"
      ],
      "@exceptions": [
        "exceptions/"
      ]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "webpack.config.js",
    "build"
  ]
}